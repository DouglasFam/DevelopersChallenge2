@model Xayah.App.ViewModels.DocumentViewModel

@{
    ViewData["Title"] = "Upload Files";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="form-group">               
                <div class="custom-file">
                    <input type="file" name="filesUpload" multiple>

                    <span asp-validation-for="UploadDocument" id="UploadDocument" class="text-danger"></span>
                    <label style="display: none" id="file_name"></label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Upload" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}
